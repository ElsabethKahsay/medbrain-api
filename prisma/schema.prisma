

generator client {
  provider = "prisma-client-js"
}




model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String?
  projects  Project[]
  entries   Entry[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  id           String      @id @default(uuid())
  title        String
  description  String
  introduction String
  type         Field
  status       EntryStatus
  tags         String[]
  source       String?
  sourceLink   String?
  visibility   Visibility  @default(PUBLIC)
  entriesCount Int         @default(0)
  rating       Float       @default(0)
  userId       String
  user         User        @relation(fields: [userId], references: [id])
  entries      Entry[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model Entry {
  id          String      @id @default(uuid())
  title       String
  description String
  type        EntryType
  status      EntryStatus
  tags        String[]
  source      String?
  sourceLink  String?
  visibility  Visibility  @default(PUBLIC)
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  projectId   String?
  project     Project?    @relation(fields: [projectId], references: [id])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}
